{
  "manifest_version": 3,
  "name": "Anava Local Network Bridge",
  "version": "2.0.2",
  "description": "Provides local network access for Anava Camera Deployer web application. Required for camera discovery and configuration.",
  "permissions": [
    "nativeMessaging"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:5173/*",
      "http://localhost:3000/*",
      "https://anava-ai.web.app/*",
      "https://anava-ai.firebaseapp.com/*"
    ],
    "accepts_tls_channel_id": false
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Anava Local Network Bridge"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
